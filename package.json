{
  "name": "intellipen",
  "version": "1.0.1",
  "description": "Intelligent writing and meeting companion with real-time grammar correction, style improvements, and meeting transcription using Chrome's built-in AI APIs.",
  "main": "background.js",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c --environment NODE_ENV:development",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js",
    "test": "jest",
    "test-server": "node start-test-server.js",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-store-images": "node scripts/generate-store-images.js",
    "package": "npm run clean && NODE_ENV=production npm run build && cd dist && zip -r ../intellipen-v1.0.1.zip . && cd .. && echo 'Package created: intellipen-v1.0.1.zip'"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "writing-assistant",
    "meeting-transcription",
    "grammar-checker",
    "privacy-first",
    "gemini-nano"
  ],
  "author": "IntelliPen Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rollup": "^4.9.6",
    "rollup-plugin-copy": "^3.5.0",
    "sharp": "^0.33.5"
  },
  "dependencies": {
    "dompurify": "^3.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/intellipen/intellipen-extension.git"
  },
  "bugs": {
    "url": "https://github.com/intellipen/intellipen-extension/issues"
  },
  "homepage": "https://github.com/intellipen/intellipen-extension#readme",
  "browserslist": [
    "Chrome >= 138"
  ]
}
